.center-block.mt-xl.wd-xl
  // START panel
  .panel.panel-inverse
    .panel-heading.text-center
      img.center-block.img-rounded(src='app/img/logo-single.png', alt='Image')
    .panel-body
      p.text-center.pv.text-bold REGISTER NEW ACCOUNT
      form(role='form').mb-lg
        .form-group.has-feedback
          input#signupInputEmail1.form-control(type='email', placeholder='Your email', autocomplete="off")
          span.fa.fa-envelope.form-control-feedback.text-muted
        .form-group.has-feedback
          input#signupInputPassword1.form-control(type='password', placeholder='Your password', autocomplete="off")
          span.fa.fa-lock.form-control-feedback.text-muted
        .form-group.has-feedback
          input#signupInputRePassword1.form-control(type='password', placeholder='Type again your password', autocomplete="off")
          span.fa.fa-lock.form-control-feedback.text-muted
        .clearfix
          .checkbox.c-checkbox.pull-left.mt0
            label
              input(type='checkbox', value='')
              span.fa.fa-check
              |  I agree with the 
              a(href="#") terms
        
        button.btn.btn-block.btn-primary.mt-lg(type='submit') Create account
      
      p.pt-lg.text-center Already register?
      a(ui-sref="page.login").btn.btn-block.btn-default: strong Login

  // END panel
  .p-lg.text-center(ng-include="'app/pages/page-footer.html'")