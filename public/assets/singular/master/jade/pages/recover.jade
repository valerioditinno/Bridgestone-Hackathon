.center-block.mt-xl.wd-xl
  // START panel
  .panel.panel-inverse
    .panel-heading.text-center
      img.center-block.img-rounded(src='app/img/logo-single.png', alt='Image')
    .panel-body
      p.text-center.pv.text-bold RESET PASSWORD
      form(role='form')
        p.text-center We will send you instructions to reset your password.
        .form-group.has-feedback
          input#resetInputEmail1.form-control(type='email', placeholder='Your email', autocomplete="off")
          span.fa.fa-envelope.form-control-feedback.text-muted
        
        button.btn.btn-danger.btn-block(type='submit') Send
            
  // END panel
  .p-lg.text-center(ng-include="'app/pages/page-footer.html'")