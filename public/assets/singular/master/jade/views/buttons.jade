mixin dropdown_button(type)
  // START button group
  .btn-group.mb-sm.mr(dropdown='dropdown')
    button.btn.dropdown-toggle(type='button', ng-disabled='disabled', class="btn-#{type}", dropdown-toggle="")
      = type
      | &nbsp;
      span.caret
    ul.dropdown-menu(role='menu')
      li
        a(href='#') Action
      li
        a(href='#') Another action
      li
        a(href='#') Something else here
      li.divider
      li
        a(href='#') Separated link
  // END button group

mixin dropdown_split(type)
  // START button group
  .btn-group(dropdown='dropdown').mb.mr
    button.btn(type='button', class="btn-#{type}") Action
    button.btn.dropdown-toggle(type='button', class="btn-#{type}", dropdown-toggle="")
      span.caret
      span.sr-only= type
    ul.dropdown-menu(role='menu')
      li
        a(href='#') Action
      li
        a(href='#') Another action
      li
        a(href='#') Something else here
      li.divider
      li
        a(href='#') Separated link
  // END button group

mixin build-anim-panel(animation)
  .p
    // START button group
    .btn-group.mr(dropdown='dropdown')
      button.btn.btn-default.dropdown-toggle.btn-block(dropdown-toggle="")
        = animation
        | &nbsp;
        b.caret
      ul.dropdown-menu(role='menu', class="animated #{animation}")
        li
          a(href='#') Action
        li
          a(href='#') Another action
        li
          a(href='#') Something else here
        li
          a(href='#') Separated link
    // END button group


